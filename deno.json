{
  "tasks": {
    "dev": "deno run -A --node-modules-dir=auto npm:vite & deno run server:start",
    "build": "deno run -A --node-modules-dir=auto npm:vite build",
    "server:start": "deno run -A --node-modules-dir --watch ./server/main.ts",
    "serve": "deno task build && deno task server:start"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
    "@oak/oak": "jsr:@oak/oak@^17.1.3",
    "@std/assert": "jsr:@std/assert@1",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@tajpouria/cors": "jsr:@tajpouria/cors@^1.2.1",
    "@tanstack/react-query": "npm:@tanstack/react-query@^4.36.1",
    "@trpc/client": "npm:@trpc/client@^11.0.0-rc.666",
    "@trpc/server": "npm:@trpc/server@^11.0.0-rc.666",
    "@types/react": "npm:@types/react@^18.3.12",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.3",
    "react": "npm:react@^18.3.1",
    "react-dom": "npm:react-dom@^18.3.1",
    "react-router-dom": "npm:react-router-dom@^7.0.2",
    "vite": "npm:vite@^5.4.11",
    "zod": "npm:zod@^3.24.1"
  },
  "compilerOptions": {
    "types": [
      "react",
      "react-dom",
      "@types/react"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns"
    ],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "lint": {
    "include": [
      "client/",
      "server/"
    ],
    "exclude": [
      "client/.vite/*/**"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "proseWrap": "preserve",
    "include": [
      "client/",
      "server/"
    ],
    "exclude": [
      "client/.vite/*/**"
    ]
  }
}